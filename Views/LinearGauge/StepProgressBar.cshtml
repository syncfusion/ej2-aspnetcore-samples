@section ControlsSection{
    @{
        var labelFont = new Syncfusion.EJ2.LinearGauge.LinearGaugeFont { FontFamily = "inherit", Size = "16px" };
    }
    <div class="control-section">
        <ejs-lineargauge AxisLabelRender='axisLabelRender' load="gaugeLoad" id='defaultContainer'
                     Background='Transparent' style='display:block;' Orientation='Horizontal'>
            <e-lineargauge-axes>
                <e-lineargauge-axis Minimum="5" Maximum="20" OpposedPosition="true">
                    <e-axis-majorticks Height="0" interval="5"></e-axis-majorticks>
                    <e-axis-minorticks Height="0"></e-axis-minorticks>
                    <e-axis-line Width="5"></e-axis-line>
                    <e-axis-labelstyle Offset=20 font=labelFont></e-axis-labelstyle>
                    <e-lineargauge-pointers>
                        <e-lineargauge-pointer Type="Marker" MarkerType=Image ImageUrl="../styles/images/lineargauge/tick-icon.png" Value="5" Height=25 Width=25 Placement=Near></e-lineargauge-pointer>
                        <e-lineargauge-pointer Type="Marker" MarkerType=Image ImageUrl="../styles/images/lineargauge/tick-icon.png" Value="10" Height=25 Width=25 Placement=Near></e-lineargauge-pointer>
                        <e-lineargauge-pointer Type="Marker" MarkerType=Image ImageUrl="../styles/images/lineargauge/tick-icon.png" Value="15" Height=25 Width=25 Placement=Near></e-lineargauge-pointer>
                        <e-lineargauge-pointer Type="Marker" MarkerType=Circle Value="20" Height=25 Width=15 Placement=Center Color="#D1D9DD" Offset="-13"></e-lineargauge-pointer>
                    </e-lineargauge-pointers>
                    <e-lineargauge-ranges>
                        <e-lineargauge-range Start="5" End="10" Color="#1FAC8A" StartWidth="5" EndWidth="5"></e-lineargauge-range>
                        <e-lineargauge-range Start="10" End="15" Color="#1FAC8A" StartWidth="5" EndWidth="5"></e-lineargauge-range>
                        <e-lineargauge-range Start="15" End="20" Color="#D1D9DD" StartWidth="5" EndWidth="5"></e-lineargauge-range>
                    </e-lineargauge-ranges>
                </e-lineargauge-axis>
            </e-lineargauge-axes>
        </ejs-lineargauge>
    </div>
    <!-- custom code start -->
    <style>
        .control-section {
            min-height: 450px;
        }
    </style>
    <!-- custom code end -->
}

<script>
    var gauge;
    window.gaugeLoad = function (args) {
    @* custom code start *@
        var theme = themeName ? themeName : 'Material';
        args.gauge.theme = (theme.charAt(0).toUpperCase() +
            theme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast');
    @* custom code end *@
    }
    function axisLabelRender(args) {
        if (args.text == "5")
            args.text = "Ordered";
        else if (args.text == "10")
            args.text = "Packed";
        else if (args.text == "15")
            args.text = "Shipped";
        else if (args.text == "20")
            args.text = "Delivered";
        else
            args.text = " ";
    }
</script>

