@using Syncfusion.EJ2
@section ControlsSection{
    @{
            string valueX1 = "8%";
            string valueX2 = "12%";
            string valueX3 = "35%";
            string valueX4 = "63%";
            string valueX5 = "75%";
            string valueX6 = "85%";
            string valueX7 = "93%";
    }
    
     <div class="control-section" align="center">
         <ejs-chart id="lineContainer" load="load" title="US Music Sales By Format">
                <e-chart-chartarea>
                    <e-chartarea-border width="0"></e-chartarea-border>
                </e-chart-chartarea>
                <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.DateTime" minimum="new DateTime(1973, 1, 1)" maximum="new DateTime(2018, 1, 1)" labelFormat="yyyy" intervalType= "@Syncfusion.EJ2.Charts.IntervalType.Years" edgeLabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift">
                    <e-majorgridlines width="0"></e-majorgridlines>
                    <e-majorticklines width="0"></e-majorticklines>
                </e-chart-primaryxaxis>
                <e-chart-primaryyaxis title = "In Billions (USD)" minimum="0" maximum="25" interval=5 >
                    <e-linestyle width="0"></e-linestyle>
                    <e-majorticklines width="0"></e-majorticklines>
                </e-chart-primaryyaxis>
             <e-series-collection>
                 <e-series dataSource="ViewBag.Compact" xName="Period" yName="USD" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                     <e-series-border width="1.5" color="white"></e-series-border>
                 </e-series>
                 <e-series dataSource="ViewBag.Download" xName="Period" yName="USD" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                     <e-series-border width="1.5" color="white"></e-series-border>
                 </e-series>
                 <e-series dataSource="ViewBag.Streaming" xName="Period" yName="USD" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                     <e-series-border width="1.5" color="white"></e-series-border>
                 </e-series>
                 <e-series dataSource="ViewBag.Casette" xName="Period" yName="USD" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                     <e-series-border width="1.5" color="white"></e-series-border>
                 </e-series>
                 <e-series dataSource="ViewBag.Vinyl" xName="Period" yName="USD" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                     <e-series-border width="1.5" color="white"></e-series-border>
                 </e-series>
                 <e-series dataSource="ViewBag.Track" xName="Period" yName="USD" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                     <e-series-border width="1.5" color="white"></e-series-border>
                 </e-series>
                 <e-series dataSource="ViewBag.Other" xName="Period" yName="USD" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                     <e-series-border width="1.5" color="white"></e-series-border>
                 </e-series>
             </e-series-collection>
             <e-chart-annotations>
                 <e-chart-annotation region="@Syncfusion.EJ2.Charts.Regions.Series" x="valueX1" y="95%"></e-chart-annotation>
                 <e-chart-annotation region="@Syncfusion.EJ2.Charts.Regions.Series" x="valueX2" y="80%"></e-chart-annotation>
                 <e-chart-annotation region="@Syncfusion.EJ2.Charts.Regions.Series" x="valueX3" y="87%"></e-chart-annotation>
                 <e-chart-annotation region="@Syncfusion.EJ2.Charts.Regions.Series" x="valueX4" y="70%"></e-chart-annotation>
                 <e-chart-annotation region="@Syncfusion.EJ2.Charts.Regions.Series" x="valueX5" y="98%"></e-chart-annotation>
                 <e-chart-annotation region="@Syncfusion.EJ2.Charts.Regions.Series" x="valueX6" y="93%"></e-chart-annotation>
                 <e-chart-annotation region="@Syncfusion.EJ2.Charts.Regions.Series" x="valueX7" y="96%"></e-chart-annotation>
             </e-chart-annotations>
         </ejs-chart>
        </div>
    
    @*custom code start*@
    <script>
        function load(args) {
            var selectedTheme = location.hash.split('/')[1];
            selectedTheme = selectedTheme ? selectedTheme : 'Material';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast'));
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.annotations[0].content = ej.base.Browser.isDevice ? '<div style="font-weight: bold; color: white; font-size: 7px;">8-TRACK</div>' : '<div style="font-weight: bold; color: white; font-size: 11px;">8-TRACK</div>';
            args.chart.annotations[1].content = ej.base.Browser.isDevice ? '<div style="font-weight: bold; color: white; font-size: 7px;">VINYL</div>' : '<div style="font-weight: bold; color: white;font-size: 11px;">VINYL</div>';
            args.chart.annotations[2].content = ej.base.Browser.isDevice ? '<div style="font-weight: bold; color: white; font-size: 7px;">CASSETTE</div>': '<div style="font-weight: bold; color: white;font-size: 11px;">CASSETTE</div>';
            args.chart.annotations[3].content = ej.base.Browser.isDevice ? '<div style="font-weight: bold; color: white; font-size: 7px;">COMPACT DISC</div>':'<div style="font-weight: bold; color: white;font-size: 11px;">COMPACT DISC</div>';
            args.chart.annotations[4].content = ej.base.Browser.isDevice ? '<div style="font-weight: bold; color: white; font-size: 7px;">OTHERS</div>':'<div style="font-weight: bold; color: white;font-size: 11px;">OTHERS</div>';;
            args.chart.annotations[5].content = ej.base.Browser.isDevice ? '<div style="font-weight: bold; color: white; font-size: 7px;">DOWNLOAD</div>':'<div style="font-weight: bold; color: white; font-size: 11px;">DOWNLOAD</div>';
            args.chart.annotations[6].content = ej.base.Browser.isDevice ? '<div style="font-weight: bold; color: white; font-size: 7px;">STREAMING</div>':'<div style="font-weight: bold; color: white;font-size: 11px;">STREAMING</div>';
        }
    </script>
        @*custom code end*@
}
    @*custom code start*@
@section Scripts {

}

