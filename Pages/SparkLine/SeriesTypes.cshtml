            } else if (args.sparkline.element.id === "area") {
                args.sparkline.dataSource = [
                    { x: 1, xval: 'Jan', yval: 34 },
                    { x: 2, xval: 'Feb', yval: 36 },
                    { x: 3, xval: 'Mar', yval: 32 },
