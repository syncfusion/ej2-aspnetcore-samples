@using Syncfusion.EJ2
@section ControlsSection{
    <div class="col-lg-12 control-section">
            <div id="container" align="center">
                <ejs-chart id="Chart" load="load" title="Chart with 100k points" width="90%">
                    <e-chart-primaryxaxis interval="1" valueType="@Syncfusion.EJ2.Charts.ValueType.DateTime" intervalType="@Syncfusion.EJ2.Charts.IntervalType.Years" title="Years">
                        <e-majorgridlines width="0"></e-majorgridlines>
                    </e-chart-primaryxaxis>
                    <e-chart-primaryyaxis interval="2000" minimum="0" maximum="12000" title="Values">
                        <e-linestyle width="0"></e-linestyle>
                        <e-majorticklines width="0"></e-majorticklines>
                    </e-chart-primaryyaxis>
                    <e-chart-legendsettings visible="false">
                    </e-chart-legendsettings>
                    <e-chart-chartarea>
                        <e-chartarea-border width="0"></e-chartarea-border>
                    </e-chart-chartarea>
                    <e-series-collection>
                        <e-series dataSource="@ViewBag.chartPoints" name="Series" xName="x" yName="y" fill="url(#fluent-gradient-chart)" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                        <e-series-border width="2" color="borderColor"></e-series-border>
                        <e-series-animation enable="false"></e-series-animation>
                        </e-series>                   
                    </e-series-collection>
                </ejs-chart>
            </div>
        </div>
        
        <script>
        @*custom code start*@
            var valueUrl = "url";
            var borderColor;
            var fillColor;
            var themes = ['bootstrap5', 'bootstrap5dark', 'tailwind', 'tailwinddark', 'material', 'materialdark', 'bootstrap4', 'bootstrap', 'bootstrapdark', 'fabric', 'fabricdark', 'highcontrast', 'fluent', 'fluentdark', 'material3', 'material3dark'];
        var borderColor = ['#6355C7', '#8F80F4', '#5A61F6', '#8B5CF6', '#00bdae', '#9ECB08', '#a16ee5', '#a16ee5', '#a16ee5', '#4472c4', '#4472c4', '#79ECE4', '#1AC9E6', '#1AC9E6', '#6355C7', '#4EAAFF'];
            function load(args) {
                var selectedTheme = location.hash.split("/")[1];
                selectedTheme = selectedTheme ? selectedTheme : "Material";
                args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast'));
                args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
                args.chart.primaryXAxis.labelIntersectAction = ej.base.Browser.isDevice ? 'None' : 'Rotate45';
                args.chart.primaryXAxis.labelRotation = ej.base.Browser.isDevice ? -45 : 0;
                args.chart.series[0].fill = 'url(#' + selectedTheme + '-gradient-chart)';
                args.chart.series[0].border.color = borderColor;
            };
        @*custom code end*@     
        </script>
