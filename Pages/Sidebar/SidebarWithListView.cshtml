        margin-top: 7px;
    }

    .fabric-dark.e-bigger .list-wrapper .e-avatar,
    .fabric.e-bigger .list-wrapper .e-avatar,
    .bootstrap-dark.e-bigger .list-wrapper .e-avatar,
    .bootstrap.e-bigger .list-wrapper .e-avatar {
        margin-top: 10px;
    }

