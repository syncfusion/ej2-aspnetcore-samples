@using Syncfusion.EJ2.Maps;
@section ControlsSection
    {
    @{
        var palette = new string[] { "#E2B247", "#88DB46", "#42C4E2", "#C08AF8", "#52BACC", "#F4CE2F", "#6986ED" };
        var shapeborder = new MapsBorder
        {
            Width = 0.5,
            Color = "white"
        };
        var titleStyle = new MapsFont
        {
            Size = "16px",
        };
        var data1 = new[] {
new { weather = "clear", Name = "Perth", latitude = -31.950527, longitude = 115.860457, Temperature = 31.6 } };
        var data2 = new[] {
new { weather = "clouds", Name = "Adelaide", latitude = -34.928499, longitude = 138.600746, Temperature = 28.5 } };
        var data3 = new[] {
new { weather = "clear", Name = "Townsville", latitude = -19.2589635, longitude = 146.8169483, Temperature = 31.3 } };
        var data4 = new[] {
new { weather = "rain", Name = "Sydney", latitude = -33.868820, longitude = 151.209296, Temperature = 26.4 } };
        var data5 = new[] {
new { weather = "clear", Name = "Alice Springs", latitude = -23.698042, longitude = 133.880747, Temperature = 36.4 }};
        var data6 = new[] {
new { weather = "clouds", Name = "Brisbane", latitude = -27.469771, longitude = 153.025124, Temperature = 29.1 }};

    }
    <div class="control-section">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8" align="center">
                <ejs-maps id="maps" width="100%" load="window.onMapLoad">
                    <e-maps-titlesettings alignment="@Syncfusion.EJ2.Maps.Alignment.Center" text="Australia cities weather detail" textStyle="titleStyle"></e-maps-titlesettings>
                    <e-maps-zoomsettings enable="false"></e-maps-zoomsettings>
                    <e-maps-layers>
                        <e-maps-layer shapeData="ViewBag.australia">
                            <e-layersettings-tooltipsettings visible="false"></e-layersettings-tooltipsettings>
                            <e-layersettings-shapesettings autofill="true" border="shapeborder" palette="palette"></e-layersettings-shapesettings>
                            <e-layersettings-markers>
                                <e-layersettings-marker visible="true" height="30" width="30" template="#template" dataSource="data1"></e-layersettings-marker>
                                <e-layersettings-marker visible="true" height="30" width="30" template="#template1" dataSource="data2"></e-layersettings-marker>
                                <e-layersettings-marker visible="true" height="30" width="30" template="#template" dataSource="data3"></e-layersettings-marker>
                                <e-layersettings-marker visible="true" height="30" width="30" template="#template2" dataSource="data4"></e-layersettings-marker>
                                <e-layersettings-marker visible="true" height="30" width="30" template="#template" dataSource="data5"></e-layersettings-marker>
                                <e-layersettings-marker visible="true" height="30" width="30" template="#template1" dataSource="data6"></e-layersettings-marker>
                            </e-layersettings-markers>
                        </e-maps-layer>
                    </e-maps-layers>
                </ejs-maps>
                <div style="float: right; margin-right: 10px;">
                    Source:
                    <a href="http://www.bom.gov.au/calendar/annual/climate.shtml" target="_blank">www.bom.gov.au</a>
                </div>
            </div>
        </div>
    </div>
    <div id='template' style="display:none">
        <div id="marker1">
            <img style="height:30px;width:30px;" src="../styles/images/maps/weather-clear.png" alt="Weather clear"/><p>{{:Name}}:{{:Temperature}}°C</p>
        </div>
    </div>
    <div id='template1' style="display:none">
        <div id="marker1">
            <img style="height:30px;width:30px;" src="../styles/images/maps/weather-clouds.png" alt="Weather cloud"/><p>{{:Name}}:{{:Temperature}}°C</p>
        </div>
    </div>
    <div id='template2' style="display:none">
        <div id="marker2">
            <img style="height:30px;width:30px;" src="../styles/images/maps/weather-rain.png" alt="Weather rain"/><p>{{:Name}}:{{:Temperature}}°C</p>
        </div>
    </div>
}
@*custom code start*@
<script>
    function onMapLoad(args) {
        var theme = themeName ? themeName : "Material";
        args.maps.theme = (theme.charAt(0).toUpperCase() + theme.slice(1));
    }
</script>
@*custom code end*@
@section Meta{
                    <meta name="description" content="This example demonstrates the MarkerTemplate in ASP.NET Core Maps control. Explore here for more details."/>
                }
@section ActionDescription{
    <div id="action-description">
        <p>
            This sample indicates the temperature of various cities of Australia in marker templates.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            In this example, you can see how to place a template as a marker in the map. Any custom HTML elements can be used as a marker. You can use the <code>palette</code> property in the <code>shapeSettings</code> to apply desired fill colors for the shapes.
        </p>
        <br />
        <p style="font-weight: 500">Injecting Module</p>
        <p>
            Maps component features are segregated into individual feature-wise modules. To use a marker template, inject the <code>Marker</code> module using the <code>Maps.Inject(Marker)</code> method.
        </p>
    </div>
}
@section Title{
                 <title>ASP.NET Core Maps MarkerTemplate Example - Syncfusion Demos </title>
             }
@section Header{
                <h1 class='sb-sample-text'>Example for MarkerTemplate in ASP.NET Core Maps Control</h1>
            }