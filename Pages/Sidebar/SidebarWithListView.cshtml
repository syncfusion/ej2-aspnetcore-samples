@page
@model EJ2CoreSampleBrowser.Pages.Sidebar.SidebarWithListView
@using Syncfusion.EJ2;

@{
    var folderTemplate = "<div class='e-folder'><div class='e-folder-name'>Language</div></div>";
    var listTemplate = "<div class='list-wrapper'>"
                       + "<span class='${Pic} e-avatar e-avatar-xsmall e-avatar-circle'></span>"
                       + "<span class='text e-text-content'>${Text}</span></div>";
}
@section ControlsSection {
    
    <div class="control-section">
        <div id="wrapper">
            @*main content declaration*@
            <div>
                <ejs-toolbar id="listToolbar" clicked="toolbarCliked">
                    <e-toolbar-items>
                        <e-toolbar-item PrefixIcon="e-tbar-menu-icon tb-icons" TooltipText="Menu"></e-toolbar-item>
                        <e-toolbar-item template="@folderTemplate"></e-toolbar-item>
                    </e-toolbar-items>
                </ejs-toolbar>
            </div>
            <div class="maincontent">
                <div>
                    <div id="listContent" class="content">
                        Before getting into any programming language, one should have basic knowledge about HTML, CSS, and JavaScript. These are the basic building blocks of web designing. HTML describes the structure of a web page whereas CSS describes the presentation of the web page.
                    </div>
                </div>
            </div>
            @*end of main content declaration*@
        </div>
        <ejs-sidebar id="listSidebar" width="250px" target=".maincontent" type="Auto" isOpen="true" htmlAttributes="@Model.HtmlAttribute">
            <e-content-template>
                <ejs-listview id="listSidebarList" cssClass="e-template-list" template="@listTemplate" dataSource="@Model.List" select="OnSelect">
                    <e-listview-fieldsettings id="Id" text="Text"></e-listview-fieldsettings>
                </ejs-listview>
            </e-content-template>
        </ejs-sidebar>
</div>
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        sidebarObj = document.getElementById("listSidebar").ej2_instances[0];
    });
    function toolbarCliked(args) {
        if (args.item.tooltipText == "Menu") {
            sidebarObj.toggle();
        }
    }
    function OnSelect(args) {
        document.getElementById("listContent").innerHTML = args.data.Description;
    }
</script>

