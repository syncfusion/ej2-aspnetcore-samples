@using Syncfusion.EJ2;

@section ControlsSection{
<div class="control-section">
    @{Html.BeginForm("Performance", "XlsIO", FormMethod.Post);
        <div class="rowdiv">
            <p style="font-weight:normal">
                Click the "Create Document" button to view the created Excel document. Please note that the Microsoft Excel viewer or Microsoft Excel is required to view the Excel document.
            </p>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <table>
                        <tr>
                            <td width="200px">Enter the number of rows</td>
                            <td><input type="number" class="buttonStyle" id="textBox1" name="lblRows" value="30000" style="width:100px" /></td>
                        </tr>
                    </table>
                </div>
                <br />
                <div class="celldiv">
                    <table>
                        <tr>
                            <td width="200px">Enter the number of columns</td>
                            <td> <input type="number" class="buttonStyle" id="textBox2" name="lblColumns" value="50" style="width:100px" /></td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <div>
						Save As :
						<input type="radio" id="XLS" name="SaveOption" value="Xls" onclick="Disable()" />
						<label for="XLS" style="font-weight:normal">XLS</label>
						&nbsp;
						<input type="radio" id="XLSX" name="SaveOption" value="Xlsx" onclick="Enable()" checked="checked" />
						<label for="XLSX" style="font-weight:normal">XLSX</label>
					</div>
                </div>
                <br />
                <div>
                    <input id="chkImport" type="checkbox" name="import" value="ImportOnSave" />
					<label for="import" style="font-weight:normal">Import on Save</label>
                    <br />
                    <p style="font:smaller">Import on Save option directly serialize data while saving the workbook.</p>
                </div>
                <br />
                <div class="celldiv">
                    <input class="e-btn" type="submit" value="Create Document" style=" width:200px;" />
                </div>
                <div class="celldiv">
                    <label id="lblStatus">

                    </label>
                </div>
            </div>
            <script type="text/javascript">
                function Disable() {
                    document.getElementById("chkImport").checked = false;
                    document.getElementById("chkImport").disabled = true;
                }
                function Enable() {
                    document.getElementById("chkImport").disabled = false;
                }
            </script>
        }
    </div>
}
@section ActionDescription{
    This sample demonstrates the performance of XlsIO when handling larger files.
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Performance in ASP.NET Core XlsIO control. Explore here for more details."/>
                }
@section Description{
    Essential XlsIO is known for its high performance and simple APIs that have most of the functionalities of Excel.
    <br />
    <br />
    <b>Features:</b>
    <br />
    <br />
    <ul>
        <li>Creating rich, large reports with styles.</li>
        <li>Performance optimization methods.</li>
        <li>Import on Save option to serialize data while saving the workbook, which is recommended for importing large data without formatting.</li>
    </ul>
    <b>Notes:</b>
	<br />
    <br />
    <ul>
        <li>When more styles are added, it is recommended that you use global styles within <i>BeginUpdate</i> and <i>EndUpdate</i> calls.</li>
        <li>The use of <i>IMigrantRange</i> will reduce the amount of memory used when large amounts of strings are involved.</li>
    </ul>
}
@section Title{
                    <title>ASP.NET Core XlsIO Performance Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Performance in ASP.NET Core XlsIO Control</h1>
                }