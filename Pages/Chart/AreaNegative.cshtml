@page
@model EJ2CoreSampleBrowser.Pages.Chart.AreaNegativeModel
@using Syncfusion.EJ2

@section ControlsSection{
    <div class="control-section" align="center">

        <ejs-chart id="lineContainer" load="load" title="Profit and Loss">
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-legendsettings visible="true" enableHighlight="true"></e-chart-legendsettings>
            <e-chart-tooltipsettings enable="true"></e-chart-tooltipsettings>
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.DateTime" labelFormat="yyyy" minimum="new DateTime(2017, 01, 01)" maximum="new DateTime(2021, 01, 01)" edgeLabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift" intervalType="@Syncfusion.EJ2.Charts.IntervalType.Years">
                <e-majorgridlines width="0"></e-majorgridlines>
                <e-labelstyle fontStyle="bold"></e-labelstyle>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis minimum="-4000" maximum="8000" interval="2000" labelFormat="${value}">
                <e-linestyle width="0"></e-linestyle>
                <e-majorticklines width="0"></e-majorticklines>
            </e-chart-primaryyaxis>
            <e-series-collection>
                <e-series dataSource="@Model.MaryValues" name="Company A" xName="Vegetable" opacity=0.75 width=2 yName="Price" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                    <e-series-border width="2"></e-series-border>
                    <e-series-marker isFilled="true" visible="true" height="7" width="7" shape="@Syncfusion.EJ2.Charts.ChartShape.Circle"></e-series-marker>
                </e-series>
                <e-series dataSource="@Model.PatriciaValues" name="Company B" xName="Vegetable" opacity=0.75 width=2 yName="Price" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                    <e-series-border width="2"></e-series-border>
                    <e-series-marker isFilled="true" visible="true" height="7" width="7" shape="@Syncfusion.EJ2.Charts.ChartShape.Diamond"></e-series-marker>
                </e-series>
                <e-series dataSource="@Model.LindaValues" name="Company C" xName="Vegetable" opacity=0.75 width=2 yName="Price" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Area">
                    <e-series-border width="2"></e-series-border>
                    <e-series-marker isFilled="true" visible="true" height="5" width="5" shape="@Syncfusion.EJ2.Charts.ChartShape.Rectangle"></e-series-marker>
                </e-series>
            </e-series-collection>
        </ejs-chart>
    </div>

    <script>
        function load(args) {
            var selectedTheme = location.hash.split('/')[1];
            selectedTheme = selectedTheme ? selectedTheme : 'Fluent2';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5'));
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
@*custom code start*@
@section Scripts{

}

<style>

    #control-container {
        padding: 0px !important;
    }
</style>
@section Meta{
    <meta name="description" content="This example demonstrates the Area with negative points in ASP.NET Core Chart control. Explore here for more details." />
}
@*custom code end*@
@section ActionDescription{
    <p>
        This sample illustrates an area series with negative points. Data points with negative points are shown here.
    </p>
}
@section Description{
    <p>
        In this example, you can see how to render an area series with negative points. Also, a legend is enabled in the shape of the series type.
    </p>
    <p>
        More information about the negative points can be found in this
        <a target="_blank" href="https://ej2.syncfusion.com/aspnetcore/documentation/chart/working-with-data#empty-points" aria-label="Navigate to the documentation for Empty points in ASP.NET Core Chart component">documentation section</a>.
    </p>
}
@section Title{
    <title>ASP.NET Core Chart Area with Negative Points Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of Area with Negative Points in ASP.NET Core Chart Control</h1>
}
