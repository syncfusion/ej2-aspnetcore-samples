@using Syncfusion.EJ2


@section ControlsSection{
    <div class=" col-lg-8 control-section">
        <div id="wrapper" class="datepicker-section">
            <div id="datepicker-control">
                <ejs-datepicker id="datepicker" format="dd-MMM-yy" value=DateTime.Now></ejs-datepicker>
            </div>
        </div>
    </div>
    <div class="col-lg-4 property-section">
        <div class="radio-control" id="property" title="Select a format">
            <div class="row">
                <ejs-radiobutton id="format1" name="format" checked="true" label="dd-MMM-yy" value="dd-MMM-yy" change="onchange"></ejs-radiobutton>
            </div>
            <div class="row">
                <ejs-radiobutton id="format2" name="format" label="yyyy-MM-dd" value="yyyy-MM-dd" change="onchange"></ejs-radiobutton>
            </div>
            <div class="row">
                <ejs-radiobutton id="format3" name="format" label="dd-MMMM" value="dd-MMMM" change="onchange"></ejs-radiobutton>
            </div>
        </div>
    </div>
}

<script>
    function onchange(args) {
        var datepickerOBJ = document.getElementById('datepicker').ej2_instances[0];
        /*Apply selected format to the component*/
        datepickerOBJ.format = args.value;
    }
</script>

@*custom code start*@
<style>
    #wrapper {
        max-width: 246px;
        margin: 30px auto;
        padding-top: 20px;
    }

    .property-section {
        width: 250px;
    }
</style>
@*custom code end*@

