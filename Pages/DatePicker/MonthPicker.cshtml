@page

@using Syncfusion.EJ2
@section ControlsSection {
    <div class=" control-section">
        <div id="wrapper" class="datepicker-section">
            <div id="datepicker-control">
                <ejs-datepicker id="datepicker" value=DateTime.Now format="MMMM y" start="Year" depth="Year"></ejs-datepicker>
            </div>
        </div>
    </div>
}
@section ActionDescription{
    <div id="action-description">
        <p>
            The following sample demonstrates the DatePicker control acting as a month picker. It allows you to select values in terms of months.
        </p>
    </div>

}

@section Description{
    <div id="description">
        <p>
            DatePicker has the <code>Start</code> and the <code>Depth</code> properties that provide options to restrict users from navigating to any Calendar view (year, month, or decade).
        </p>
        <p>
            More information on the DatePicker Start/Depth can be found in the
            <a href="https://ej2.syncfusion.com/aspnetcore/documentation/datepicker/view/#start-and-depth-view" target="_blank " aria-label="Navigate to the documentation for Start and Depth View in ASP.NET Core DatePicker control"> Documentation section</a>.
        </p>
    </div>

}
@*custom code start*@

@section Meta{
    <meta name="description" content="This example demonstrates the Month Picker in ASP.NET Core DatePicker control. Explore here for more details." />
}

<style>
    #date_label {
        display: block;
        width: 248px;
        color: rgba(0, 0, 0, 0.58);
        margin-left: 5px;
    }

    #datepicker-control {
        max-width: 300px;
        margin: 0 auto;
    }

    #wrapper {
        max-width: 246px;
        margin: 30px auto;
        padding-top: 20px;
    }
</style>
@*custom code end*@
@section Title{
    <title>ASP.NET Core DatePicker Month Picker Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of Month Picker in ASP.NET Core DatePicker Control</h1>
}