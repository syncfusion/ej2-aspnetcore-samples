        width: 165px;
        margin: 0 auto;
        margin-top: 6%;
    }
    .control-section .row {
        margin: 20px 0;
    }

    .e-bigger .radio-control h4 {
        font-size: 20px;
    }

    #error-message {
        color: red;
        display: block;
        margin: 10px 0;
    }
</style>
@*custom code end*@
