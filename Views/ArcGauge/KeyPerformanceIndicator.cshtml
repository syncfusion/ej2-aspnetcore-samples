@using Syncfusion.EJ2;

@section Meta{
    <meta name="description" content="This example demonstrates the Key Performance Indicator in ASP.NET Core Arc Gauge control. Explore here for more details." />
}

@section ActionDescription{
    <div id="action-description">
        <p>
            This sample shows an arc gauge with a key performance indicator (KPI), which is a measurable value that shows how an organization meets key business objectives.
        </p>
    </div>
}

@section Description{
    <div id="description">
        <p>
            In this example, you can see how to render an arc gauge showing key performance indicator (KPI). You can use <a target="_blank" href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.CircularGauge.CircularGaugeAxis.html">axes</a>, <a target="_blank" href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.CircularGauge.CircularGaugeRange.html">ranges</a>, <a target="_blank" href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.CircularGauge.CircularGaugePointer.html">pointers</a> and <a target="_blank" href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.CircularGauge.CircularGaugeAnnotation.html">annotations</a> oriented properties to customize the appearance of the arc gauge, in order to achieve the desired outcome.
        </p>
        <p>
            More information on the arc gauge can be found in this
            <a target="_blank" href="https://ej2.syncfusion.com/aspnetcore/documentation/circular-gauge/getting-started">documentation section</a>.
        </p>
    </div>
}

@section ControlsSection{    
    @{
        var labelFont = new Syncfusion.EJ2.CircularGauge.CircularGaugeFont { FontFamily = "inherit", Opacity = 1, Size = "0px" };
    }
    <div class="control-section" style="border-right:0px;">
        <ejs-circulargauge id="circular" load="gaugeload">
            <e-circulargauge-axes>
                <e-circulargauge-axis startAngle="220" endAngle="140" minimum="0" maximum="100" radius="90%">
                    <e-axis-linestyle width="0"></e-axis-linestyle>
                    <e-axis-labelstyle font="labelFont">
                    </e-axis-labelstyle>
                    <e-axis-majorticks color="transparent"></e-axis-majorticks>
                    <e-axis-minorticks color="transparent"></e-axis-minorticks>
                    <e-circulargauge-annotations>
                        <e-circulargauge-annotation content='<div class="triangle-up"></div>' angle="259" radius="36%" zIndex="1"></e-circulargauge-annotation>
                        <e-circulargauge-annotation content='<div class="text" style="color:#84cbb5;">Current</div>' angle="0" zIndex="1" radius="25%"></e-circulargauge-annotation>
                        <e-circulargauge-annotation content='<div class="percentage" style="color:#84cbb5;">76.6%</div>' angle="125" radius="12%" zIndex="1"></e-circulargauge-annotation>
                        <e-circulargauge-annotation content='<div style="font-size:22px;font-family:inherit;">0</div>' angle="213" radius="83%" zIndex="1" ></e-circulargauge-annotation>
                        <e-circulargauge-annotation content='<div style="font-size:22px;font-family:inherit;">100</div>' angle="150" radius="83%" zIndex="1"></e-circulargauge-annotation>
                    </e-circulargauge-annotations>
                    <e-circulargauge-pointers>
                        <e-circulargauge-pointer type="Marker" markerShape="Circle" markerWidth="30" markerHeight="30" radius="82%" color="#bdbdbf" value="30">
                            <e-pointer-animation enable="false"></e-pointer-animation>
                        </e-circulargauge-pointer>
                        <e-circulargauge-pointer type="Marker" markerShape="Circle" markerWidth="30" markerHeight="30" radius="82%" color="#626866" value="50">
                            <e-pointer-animation enable="false"></e-pointer-animation>
                        </e-circulargauge-pointer>
                        <e-circulargauge-pointer type="Marker" markerShape="InvertedTriangle" markerWidth="30" markerHeight="30" radius="92%" color="#b6b6b6" value="76.6">
                        </e-circulargauge-pointer>
                    </e-circulargauge-pointers>
                    <e-circulargauge-ranges>
                        <e-circulargauge-range start="0" end="100" color="#e3e3e3" radius="90%" roundedCornerRadius="20" startWidth="30" endWidth="30"></e-circulargauge-range>
                        <e-circulargauge-range start="30" end="50" radius="90%" startWidth="30" endWidth="30">
                        </e-circulargauge-range>
                    </e-circulargauge-ranges>
                </e-circulargauge-axis>
            </e-circulargauge-axes>
        </ejs-circulargauge>
    </div>
    <style>
        .triangle-up {
            width: 20;
            height: 20;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-bottom: 20px solid #84cbb5;
            margin-top: -28px;
        }

        .text {
            font-family:inherit;
            font-size: 30px;
            text-align: center;
        }

        .percentage {
            font-family: inherit;
            font-size: 44px;
            text-align: center;
            margin-left: -8px;
        }

        .e-view.tailwind div.triangle-up, .e-view.tailwind-dark div.triangle-up {
            margin-top: 6px;
        }

        .e-view.tailwind div.text, .e-view.tailwind-dark div.text {
            margin-top: 23px;
        }

        .e-view.material div.triangle-up, .e-view.material-dark div.triangle-up,
        .e-view.bootstrap-dark div.triangle-up,
        .e-view.bootstrap div.triangle-up,
        .e-view.bootstrap4 div.triangle-up {
            width: 20;
            height: 20;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-bottom: 20px solid #84cbb5;
            margin-top: -30px;
        }
    </style>
    <style type="text/css" media="screen and (max-width:420px)">
        .text {
            font-size: 20px;
            text-align: center;
            margin-left: 10px;
        }

        .percentage {
            font-size: 30px;
            text-align: center;
        }

        .triangle-up {
            width: 20;
            height: 20;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-bottom: 20px solid #84cbb5;
            margin-top: -20px;
        }

        .e-view.tailwind div.triangle-up, .e-view.tailwind-dark div.triangle-up {
            margin-top: 12px;
        }

        .e-view.material div.triangle-up,
        .e-view.material-dark div.triangle-up,
        .e-view.bootstrap-dark div.triangle-up,
        .e-view.bootstrap div.triangle-up,
        .e-view.bootstrap4 div.triangle-up {
            width: 20;
            height: 20;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-bottom: 20px solid #84cbb5;
            margin-top: -22px;
        }
    </style>
}
<script>
     var rangeLinearGradient = {
         startValue: '0%',
         endValue: '60%',
         colorStop: [
            { color: 'white', offset: '10%', opacity: 0.9 },
            { color: '#84cbb5', offset: '90%', opacity: 0.9 },
         ]
     };
    window.gaugeload = function (args) {
        @* custom code start *@
            var theme = themeName ? themeName : 'Material';
        args.gauge.theme = (theme.charAt(0).toUpperCase() +
            theme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast');
        @* custom code end *@
    
        window.gauge = args.gauge;
	    var axis = args.gauge.axes[0];
        axis.ranges[1].linearGradient = rangeLinearGradient;

        if (theme.indexOf("tailwind") != -1) {
            args.gauge.axes[0].annotations[0].angle = 92;
            args.gauge.axes[0].annotations[0].radius = "-40%";
            args.gauge.axes[0].annotations[1].angle = 170;
            args.gauge.axes[0].annotations[1].radius = "-29%";
            args.gauge.axes[0].annotations[2].angle = 148;
            args.gauge.axes[0].annotations[2].radius = "12%";
        }
    }
</script>

