@section ControlsSection{
    <div class="col-lg-9 control-section">
        <div id='documenteditor_titlebar' class="e-de-ctn-title"></div>
        <ejs-documenteditorcontainer id="container" enableToolbar=true ribbonLayout="Classic" height="590px"></ejs-documenteditorcontainer>
    </div>
    <div class="col-lg-3 property-section">
        <div class="content-wrapper">
            <div class="heading-section">
                <h5><b>Customize Ribbon</b></h5>
            </div>
            <div class="content-wrapper">
                <ejs-checkbox id="showHomeTab" label="Show/Hide Home Tab" checked="true"></ejs-checkbox>
            </div><br>
            <div class="content-wrapper">
                <ejs-checkbox id="showClipboard" label="Show/Hide Clipboard Group" checked="true"></ejs-checkbox>
            </div><br>
            <div class="content-wrapper">
                <ejs-checkbox id="showItem" label="Show/Hide Bold & Italic Items" checked="true"></ejs-checkbox>
            </div><br>
            <div class="content-wrapper">
                <ejs-checkbox id="enableItem" label="Enable/Disable Underline Item" checked="true"></ejs-checkbox>
            </div><br>
        </div>
    </div>
}

@section ActionDescription{
    <div id="action-description">
