@page
@model EJ2CoreSampleBrowser_NET8.Pages.Pdf.Conformance

@using Syncfusion.EJ2
@{ var Title = "Essential PDF :Conformance : Syncfusion"; }

@section ControlsSection
    {
    <div class="control-section">
        @{Html.BeginForm("conformance", "pdf", FormMethod.Post);
            {
                <div class="tablediv" style="font-size:14px">
                    Click the button to view a PDF/A conformance document generated by Essential PDF. Please note
                    that Adobe Reader or its equivalent is required to view the resultant document.
                </div>
                <br />
                <div class="tablediv" style="font-size:14px">
                    <div class="rowdiv">
                        <div class="celldiv">



                            <div>
                                <label style="font-weight:bold">
                                    Please select the conformance&nbsp;&nbsp;:&nbsp;&nbsp;
                                </label>

                                <ejs-dropdownlist id="conform" name="conformance" width="115px" index="0" dataSource="@Model.data" placeholder="Select Conformance Level" popupHeight="200px">
                                    <e-dropdownlist-fields text="Conformance Options"></e-dropdownlist-fields>
                                </ejs-dropdownlist>


                            </div>



                            <div>&nbsp;</div>
                            <div>
                                <input type="submit" class="e-btn" value="Create Conformance PDF" style="width: 220px; text-transform:capitalize" />
                            </div>
                        </div>
                    </div>
                </div>

                Html.EndForm();
            }
        }
    </div>
}
@section ActionDescription{
    <div id="action-description" style="margin-top: 10px">
        This sample demonstrates various PDF conformance support in Essential PDF.
    </div>
}
@section Meta{
    <meta name="description" content="This example demonstrates the PDF Conformance in ASP.NET Core PDF library. Explore here for more details." />
}
@section Description{
    <div id="description" style="margin-top: 10px">
        This feature can be used for long term archiving and standardization. More information about conformance can be found in this documentation <a href="https://help.syncfusion.com/file-formats/pdf/working-with-pdf-conformance">section</a>.
    </div>
}
@section Title{
    <title>ASP.NET Core PDF library - PDF Conformance Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of PDF Conformance in ASP.NET Core PDF Library</h1>
}