@using Syncfusion.EJ2
@section ControlsSection{
    @{ViewBag.Title = "    Essential PDF :Conformance : Syncfusion";}
    <div class="control-section">
        @{Html.BeginForm("PdfToPdfAConverter", "PDF", FormMethod.Post, new { enctype = "multipart/form-data" });
            {
                <div style="font-size:14px">
                    <table>
                        <tr>
                            <td>
                                Click the button to view an PDF document generated by Essential PDF. Please note
                                that Adobe Reader or its equivalent is required to view the resultant document.
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="tablediv" style="font-size:14px">
                    <div class="rowdiv">
                        <div class="celldiv">
                            <br />
                            <text>Choose a PDF file to convert</text>
                            <table width="100%">
                                <tr>
                                    <td>
                                        <br />
                                        <div>
                                            <input type="file" name="file" value="PDF document to convert" accept="application/pdf" />
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            <table width="100%">
                                <tr>
                                    <td align="left" width="50%" style="padding:15px 7px 5px 0px">
                                        <text>Please select the conformance&nbsp;&nbsp;:&nbsp;&nbsp;</text>
                                        <ejs-dropdownlist id="conform" name="conformance" width="110px" index="0" dataSource="@ViewBag.data" placeholder="Select Conformance Level" popupHeight="200px">
                                            <e-dropdownlist-fields text="Conformance Options"></e-dropdownlist-fields>
                                        </ejs-dropdownlist>


                                    </td>
                                </tr>
       
                            </table>

                            <div id="errorlabel" value="error">
                                <br />
                                <p style="color: #FF0000;">
                                    @Html.Label("", (string)ViewBag.lab)
                            </div>
                            <table width="100%">
                                <tr>
                                    <td align="left">
                                        <input id="submit" type="submit" class="e-btn" value="Convert PDF" style="width:150px; text-transform:capitalize" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                Html.EndForm();
            }}
    </div>
}
@section ActionDescription{
    <div id="action-description" style="margin-top: 10px">
        This sample demonstrates the conversion of PDF to PDFA standard document using Essential PDF.
    </div>
}
@section Meta{
    <meta name="description" content="This example demonstrates the PDF to PDFA in ASP.NET Core PDF control. Explore here for more details." />
}
@section Description{
    <div id="description" style="margin-top: 10px">
        This feature can be used for long term archiving and standardization.
        More information about conformance can be found in this documentation <a href="https://help.syncfusion.com/file-formats/pdf/working-with-pdf-conformance">section.</a>
    </div>
}


@section Title{
    <title>ASP.NET Core PDF PDF to PDFA Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of PDF to PDFA in ASP.NET Core PDF Control</h1>
}
