@section ControlsSection{

    <div id="target" class="col-lg-12 control-section" style="height:100%">
        <ejs-button id="targetButton" e-ripple="true" content="OPEN DIALOG"></ejs-button>
        <ejs-dialog id="dialog" open="dialogOpen" height="75%" width="435px" target="#target" close="dialogClose" header="<span class='e-avatar template-image e-avatar-xsmall e-avatar-circle'></span><div id='template' title='Nancy' class='e-icon-settings'>Nancy</div>"
                    showCloseIcon="true" created="onLoad" footerTemplate="<input id='inVal' class='e-input' type='ext' placeholder='Enter your message here!'/><button id='sendButton' class='e-control e-btn e-primary' data-ripple='true'>Send</button>">
            <e-content-template>
                <div class='dialogContent'>
                    <span class='dialogText'>Greetings Nancy! When will you share me the source files of the project?</span>
                </div>
            </e-content-template>
        </ejs-dialog>
    </div>
}

