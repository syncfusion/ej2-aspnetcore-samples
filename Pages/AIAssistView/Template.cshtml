    }

    .template-aiassistview .e-response-item-template .e-toolbar-items {
        margin-left: 35px;
    }

    .template-aiassistview .responseItemContent {
        margin-left: 20px
    }

    .template-aiassistview .promptItemContent .prompt-header,
