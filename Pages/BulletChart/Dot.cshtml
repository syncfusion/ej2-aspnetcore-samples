@page
@using EJ2CoreSampleBrowser.Pages.BulletChart;
@using Syncfusion.EJ2;
@model EJ2CoreSampleBrowser.Pages.BulletChart.DotModel

@section ControlsSection{
    <div class="control-section col-md-8">
        <div id="container1" align='center'>
            <ejs-bulletchart id="bulletgraph" minimum="0" maximum="300" interval="50"
                             orientation="@Syncfusion.EJ2.Charts.OrientationType.Horizontal" titlePosition="@Syncfusion.EJ2.Charts.TextPosition.Left"
                             title="New Customers" subtitle="in Thousands" valueField="Value"
                             targetField="Target" dataSource="@Model.BulletData1" load="window.onLoad">
                <e-bulletchart-animation enable="false"></e-bulletchart-animation>
                <e-bulletchart-tooltipsettings enable="true"></e-bulletchart-tooltipsettings>
                <e-bullet-range-collection>
                    <e-bullet-range end="150"></e-bullet-range>
                    <e-bullet-range end="250"></e-bullet-range>
                    <e-bullet-range end="300"></e-bullet-range>
                </e-bullet-range-collection>
                <e-bulletchart-titlestyle textAlignment="@Syncfusion.EJ2.Charts.Alignment.Center">
                </e-bulletchart-titlestyle>
            </ejs-bulletchart>
        </div>
    </div>
    <div class="col-md-4 property-section">
        <div class="property-panel-header">Properties</div>
        <table>
            <tr style="height: 50px">
                <td style="width: 50%">
                    <div>Actual Value:</div>
                </td>
                <td style="width: 20%;">
                    <ejs-numerictextbox id="actual" min="0" max="300" step="10" value="270" width="140" change="onChange"></ejs-numerictextbox>
                </td>
            </tr>
            <tr style="height: 50px">
                <td style="width: 40%">
                    <div>Target Value:</div>
                </td>
                <td style="width: 20%;">
                    <ejs-numerictextbox id="target" min="0" max="300" step="10" value="250" width="140" change="onTargetChange"></ejs-numerictextbox>
                </td>
            </tr>
            <tr style="height: 50px">
                <td style="width: 40%">
                    <div>Feature Bar Type:</div>
                </td>
                <td style="width: 60%;">
                    <div style="width: 98%">
                        <ejs-dropdownlist id="featureType" dataSource="@Model.Data" change="featureTypeChange" index="0" popupHeight="220px">
                        </ejs-dropdownlist>
                    </div>
                </td>
            </tr>
            <tr style="height: 50px">
                <td style="width: 60%">
                    <div>Feature Bar Color:</div>
                </td>
                <td style="width: 40%;">
                    <div>
                        <ejs-colorpicker id='color-picker1' value='#000000' mode="Palette" change="onColorChange1"></ejs-colorpicker>
                    </div>
                </td>
            </tr>
            <tr style="height: 50px">
                <td style="width: 60%">
                    <div>Target Color:</div>
                </td>
                <td style="width: 40%;">
                    <div>
                        <ejs-colorpicker id='color-picker2' value='#000000' mode="Palette" change="onColorChange2"></ejs-colorpicker>
                    </div>
                </td>
            </tr>
        </table>
    </div>

    <script type="text/javascript">
        window.onLoad = function (args) {
            var selectedTheme = location.hash.split('/')[1];
            selectedTheme = selectedTheme ? selectedTheme : 'Fluent2';
            args.bulletChart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5'));
            args.bulletChart.titlePosition = ej.base.Browser.isDevice ? 'Top' : 'Left';
        }
        function onColorChange1(args) {
            var bullet = document.getElementById("bulletgraph").ej2_instances[0];
            bullet.valueFill = args.currentValue.hex;
            bullet.refresh();
        }
        function onColorChange2(args) {
            var bullet = document.getElementById("bulletgraph").ej2_instances[0];
            bullet.targetColor = args.currentValue.hex;
            bullet.refresh();
        }
        function featureTypeChange(args) {
            var bullet = document.getElementById("bulletgraph").ej2_instances[0];
            bullet.type = args.value;
            bullet.refresh();
        }
        function onChange(args) {
            var bullet = document.getElementById("bulletgraph").ej2_instances[0];
            bullet.dataSource[0].Value = args.value;
            bullet.refresh();
        }
        function onTargetChange(args) {
            var bullet = document.getElementById("bulletgraph").ej2_instances[0];
            bullet.dataSource[0].Target = args.value;
            bullet.refresh();
        }
    </script>
}
@*custom code start*@
@section Meta{
    <meta name="description" content="This example demonstrates the Bar Customization in ASP.NET Core BulletChart control. Explore here for more details." />
}
@*custom code end*@
@section ActionDescription{
    <div id="action-description">
        This sample illustrates the customization of feature bar and comparative bar type in terms of color and width.
    </div>
}
@section Description{
    <div id="description">
        <p>
            Tooltip is enabled in this example. To see the tooltip in action, hover a feature bar or comparative bar on the bullet chart.
        </p>
    </div>
}
@*custom code start*@
@section Scripts{
}

<style>
    #control-container {
        padding: 0px !important;
    }
</style>
@*custom code end*@
@section Title{
    <title>ASP.NET Core BulletChart Bar Customization Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of Bar Customization in ASP.NET Core BulletChart Control</h1>
}
