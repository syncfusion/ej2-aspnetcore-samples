@using Syncfusion.EJ2

@section ControlsSection{
    <div class="control-section">
        <!-- sample level element declaration -->
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            Click/Touch the button to view the sample
        </div>
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            <a class="e-btn" id="newTab">Open in new tab</a>
        </div>

    </div>

}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // open new tab
        document.getElementById('newTab').setAttribute("href", location.href.split("Sidebar")[0] + "Sidebar/SidebarAPI");
        document.getElementById('newTab').setAttribute("target", "_blank");


    });

</script>

<style>
    .center {
        text-align: center;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
</style>

@section ActionDescription{
    <div id="action-description">
        <p>
            This sample demonstrates the Sidebar component with its features. Click/Touch the button to view the Sidebar sample in a new tab.
        </p>
    </div>

}

@section Description{
    <div id="description">
        <p>
            In this sample allows to configure the <code>type</code>, <code>position</code>, <code>closeOnDocumentClick</code>and
            <code>showBackdrop</code> property.
        </p>
    </div>

}

@section Meta{

       <meta content= "This example demonstrates how to change the behavior and appearance of the ASP.NET Core sidebar based on application through user friendly API’s like types, position, auto close and backdrop" />
}
