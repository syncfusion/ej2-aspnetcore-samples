                    { x: 12, xval: 'Dec', yval: 29 },
                ];
            } else if (args.sparkline.element.id === "column") {
                args.sparkline.dataSource = [
                    { x: 1, xval: 'Jan', yval: 10 },
                    { x: 2, xval: 'Feb', yval: 6 },
                    { x: 3, xval: 'Mar', yval: 8 },
                    { x: 4, xval: 'Apr', yval: -5 },
