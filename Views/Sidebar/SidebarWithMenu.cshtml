@using Syncfusion.EJ2

@section ControlsSection{
    <div class="control-section">
        <!-- sample level element  -->
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            Click/Touch the button to view the sample
        </div>
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            <a class="e-btn" id="newTab">Open in new tab</a>
        </div>

    </div>
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('newTab').setAttribute("href", location.href.split("Sidebar")[0] + "Sidebar/SidebarMenu");
        document.getElementById('newTab').setAttribute("target", "_blank");
        // Expand the Sidebar
    });
</script>

<style>
    /* custom code start */
    .center {
        text-align: center;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
    /* custom code end */
</style>

@section ActionDescription{
    <div id="action-description">
        <p>
            Click/Touch the button to view the Sidebar sample in new tab.
        </p>
    </div>
}

@section Description{
    <div id="description">
        <p>
            This sample demonstrates how to use the Menu component inside the Sidebar for navigation purposes. Initially, the Sidebar renders in the dock state with icons, and expands when the hamburger icon at the top-left corner of the header section is clicked.
        </p>
    </div>

}
@section Meta{

       <meta content = "This example demonstrates how to render Menu for navigation purpose inside the ASP.NET Core Sidebar"/>
}
