@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
        <div class="control-wrapper">
            <div style="padding-top:15px;">
                <h4>Custom Value Support</h4>
                <ejs-multiselect id="default" placeholder="Select countries" dataSource="@ViewBag.data" allowCustomValue="true" mode="Box">
                    <e-multiselect-fields text="Name" value="Code"></e-multiselect-fields>
                </ejs-multiselect>
            </div>
        </div>
    </div>
    <style>
        .control-fluid, .container-fluid {
            padding-right: 15px;
            padding-left: 15px;
        }

        .control-content .control-section{
            border-width: 0px !important;
        }
        
        .control-section .control-wrapper {
            width: 80%;
            margin: 0 auto;
            min-width: 185px;
        }

        .e-bigger .control-section .control-wrapper {
            width: 100%;
        }

        .property-section .right-side {
            padding-left: 10px;
        }

        .property-section .left-side {
            padding: 5px;
            width: 25%
        }
    </style>

}
@section Meta{
                    <meta name="description" content="This example demonstrates the Custom Values in ASP.NET Core MultiSelect control. Explore here for more details."/>
                }
@section ActionDescription{
    <div id="action-description">
        <p>
            This sample demonstrates the custom value functionalities of the MultiSelect. Type a character(s) in the MultiSelect
            element that are not present in the dataSource, you can select and tag that custom typed characters as new item from
            the suggestion list.
        </p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            The MultiSelect allows the user to add a non-present option to the component value when the
            <code>allowCustomValue</code> is enabled. While selecting new custom value the
            <code>customValueSelection</code> event will be triggered.
        </p>
        <p>
            More information on the custom value feature can be found in the
            <a href="https://ej2.syncfusion.com/aspnetcore/documentation/multi-select/custom-value/" target="_blank"> documentation section</a>.
        </p>
    </div>
}
@section Title{
                    <title>ASP.NET Core MultiSelect Custom Values Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Custom Values in ASP.NET Core MultiSelect Control</h1>
                }