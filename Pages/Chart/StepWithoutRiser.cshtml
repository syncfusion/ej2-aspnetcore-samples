}
@*custom code end*@
@section Title {
    <title>ASP.NET Core Chart Step Without Riser Example - Syncfusion Demos </title>
}
@section Header {
    <h1 class='sb-sample-text'>Example of Step Without Riser in ASP.NET Core Chart Control</h1>
}
