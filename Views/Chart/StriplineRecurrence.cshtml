@using Syncfusion.EJ2
@section ControlsSection{
    @{
        var Vertical = "Vertical";
      
    }
    <div class="control-section col-md-8" align="center">
        <ejs-chart id="container" title="World Pollution Report" load="load" dataSource="ViewBag.dataSource">
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.DateTime" intervalType="@Syncfusion.EJ2.Charts.IntervalType.Years" stripLines="ViewBag.xAxisStrips" labelIntersectAction="@Syncfusion.EJ2.Charts.LabelIntersectAction.Trim"
                                  edgeLabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift" minimum="new DateTime(1965, 1, 1)" maximum="new DateTime(2010, 1, 1)">
                <e-majorgridlines width="0"></e-majorgridlines>
            </e-chart-primaryxaxis>
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-primaryyaxis minimum="0" maximum="18000" interval="2000" stripLines="ViewBag.yAxisStrips">
                <e-majorgridlines color="rgba(167,169,171, 0.3)"></e-majorgridlines>
                <e-majorticklines width="0"></e-majorticklines>
                <e-linestyle width="0"></e-linestyle>
                <e-labelstyle color="transparent"></e-labelstyle>
            </e-chart-primaryyaxis>
            <e-series-collection>
                <e-series dataSource="ViewBag.PollutionReports" xName="Period" yName="PollutionRate1" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column" columnSpacing="0.1" width="2" name="All sources"></e-series>
                <e-series dataSource="ViewBag.PollutionReports" xName="Period" yName="PollutionRate2" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column" columnSpacing="0.1" width="2" name="Autos & Light Trucks"></e-series>
            </e-series-collection>
            <e-chart-tooltipsettings enable="true" format="Year: <b>${point.x}</b> <br> Tons Per Day: <b>${point.y}</b>"></e-chart-tooltipsettings>
            <e-chart-legendsettings enableHighlight="true"></e-chart-legendsettings>
        </ejs-chart>
    </div>
    <div class="col-lg-4 property-section">
        <table id="property" title="Properties" style="width: 100%">
            <tbody>
                <tr style="height: 50px">
                    <td style="width: 80%">
                        <div>X Axis Striplines:</div>
                    </td>
                    <td>
                        <div>
                            <input type="checkbox" checked id="xIndex" />
                        </div>
                    </td>
                </tr>
                <tr style="height: 50px">
                    <td style="width: 80%">
                        <div>Y Axis Striplines:</div>
                    </td>
                    <td>
                        <div>
                            <input type="checkbox" checked id="yIndex" />
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <style>
        #xIndex:hover {
             cursor: pointer !important;
        }
        #yIndex:hover {
             cursor: pointer !important;
        }
    </style>
<script>

    function load(args) {
        var selectedTheme = location.hash.split('/')[1];
        selectedTheme = selectedTheme ? selectedTheme : 'Material';
        args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast'));     
    }

    document.getElementById('xIndex').onchange = () => {
        var chart = document.getElementById('container').ej2_instances[0];
        chart.animateSeries = false;
        chart.primaryXAxis.stripLines[0].visible = (document.getElementById('xIndex')).checked;
    };
    document.getElementById('yIndex').onchange = () => {
        var chart = document.getElementById('container').ej2_instances[0];
        chart.animateSeries = false;
        chart.primaryYAxis.stripLines[0].visible = (document.getElementById('yIndex')).checked;
    };
</script>
}
