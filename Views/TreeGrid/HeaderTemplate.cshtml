@using Syncfusion.EJ2


@section ControlsSection{

    <div class="control-section">
        <ejs-treegrid id="TreeGrid" dataSource="ViewBag.dataSource" height="410" childMapping="Children" treeColumnIndex="1">
            <e-treegrid-columns>
                <e-treegrid-column field="Id" headerText="Task ID" textAlign="Right" width="90"></e-treegrid-column>
                <e-treegrid-column field="Name" headerText="Task Name" headerTemplate="#projectName" width="130"></e-treegrid-column>
                <e-treegrid-column field="StartDate" headerText=" Start Date" headerTemplate="#dateTemplate" textAlign="Right" format="yMd" width="140"></e-treegrid-column>
                <e-treegrid-column field="Resources" headerText="Resource" headerTemplate="#resource" width="130" textAlign="Right"></e-treegrid-column>
                <e-treegrid-column field="Duration" headerText="Duration" headerTemplate="#durationTemplate" textAlign="Right" width="110"></e-treegrid-column>
                <e-treegrid-column field="PercentDone" headerText="Progress" headerTemplate="#progressTemplate" textAlign="Right" width="110"></e-treegrid-column>
            </e-treegrid-columns>
        </ejs-treegrid>
    </div>

    <script type="text/x-template" id="resource">
        <div>
            <div>
                <img src="@Url.Content("../images/TreeGrid/Resources.png")" width="20" height="20" class="e-image" />
                <span>&nbsp;Resources</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="projectName">
        <div>
            <div>
                <img src="@Url.Content("../images/TreeGrid/Taskname.png")" width="20" height="20" class="e-image" />
                <span>&nbsp;Task Name</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="dateTemplate">
        <div>
            <div>
                <img src="@Url.Content("../images/TreeGrid/Startname.png")" width="20" height="20" class="e-image" />
                <span>&nbsp;Start Date</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="durationTemplate">
        <div>
            <div>
                <img src="@Url.Content("../images/TreeGrid/duration.png")" width="20" height="20" class="e-image" />
                <span>&nbsp;Duration</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="progressTemplate">
        <div>
            <div>
                <img src="@Url.Content("../images/TreeGrid/progress.png")" width="20" height="20" class="e-image" />
                <span>&nbsp;Progress</span>
            </div>
        </div>
    </script>

}

@*custom code start*@

@section Meta{
                    <meta name="description" content="This example demonstrates the HeaderTemplate in ASP.NET Core Tree Grid control. Explore here for more details."/>
                }

@section ActionDescription{
    <div id="action-description">
        <p>This sample demonstrates the TreeGrid header template feature. In this sample, we have shown custom icons in the column headers.</p>
    </div>
}
@section Description{
    <div id="description">
        <p>
            The TreeGrid provides a way to define a custom element in header element. <code>Columns->HeaderTemplate</code> property accepts either string or HTML element`s ID value, which will be used as the template for the header cell.
        </p>
        <p>In this demo, we are rendering customized template for all column headers.</p>
        <p>
            More information about Header template can be found in this documentation section
        </p>
    </div>
}

@*custom code end*@
