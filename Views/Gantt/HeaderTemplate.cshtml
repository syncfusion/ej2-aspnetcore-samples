@using Syncfusion.EJ2.Gantt;
@section ControlsSection{

    <div class="control-section">
        <div class="row">
            <div class="col-md-12">
                <ejs-gantt id='HeaderTemplate' dataSource="ViewBag.dataSource" height="450px" highlightWeekends="true"
                           projectStartDate="03/24/2024" projectEndDate="07/06/2024" resources="ViewBag.projectResources">
                    <e-gantt-taskfields id="TaskId" name="TaskName" startDate="StartDate"
                                        endDate="EndDate" duration="Duration" progress="Progress" dependency="Predecessor"
                                        child="SubTasks" resourceInfo="ResourceId">
                    </e-gantt-taskfields>
                    <e-gantt-resourcefields id="ResourceId" name="ResourceName">
                    </e-gantt-resourcefields>
                    <e-gantt-columns>
                        <e-gantt-column field="TaskName" headerTemplate="#projectName" width="250"></e-gantt-column>
                        <e-gantt-column field="StartDate" headerTemplate="#dateTemplate"></e-gantt-column>
                        <e-gantt-column field="ResourceId" headerTemplate="#resource"></e-gantt-column>
                        <e-gantt-column field="Duration" headerTemplate="#durationTemplate"></e-gantt-column>
                        <e-gantt-column field="Progress" headerTemplate="#progressTemplate"></e-gantt-column>

                    </e-gantt-columns>
                    <e-gantt-splitterSettings columnIndex="4"></e-gantt-splitterSettings>
                    <e-gantt-labelSettings leftLabel="TaskName"></e-gantt-labelSettings>
                </ejs-gantt>
            </div>
        </div>
    </div>
    <script type="text/x-template" id="resource">
        <div>
            <div>
                <img class="resource"  width="20" height="20" alt="Resources Icon"/>
                <span>Resources</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="projectName">
        <div>
            <div>
                <img class="taskName"  width="20" height="20" alt="Task Name"/>
                <span>Task Name</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="dateTemplate">
        <div>
            <div>
                <img class="startDate" width="20" height="20" alt="Calendar Icon"/>
                <span>Start Date</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="durationTemplate">
        <div>
            <div>
                <img class="duration" width="20" height="20" alt="Duration Icon"/>
                <span>Duration</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="progressTemplate">
        <div>
            <div>
                <img class="progressTemplate" width="20" height="20" alt="Progress Icon"/>
                <span>Progress</span>
            </div>
        </div>
    </script>
    <style>
        .material img.resource, .fabric img.resource, .bootstrap img.resource,
        .tailwind img.resource, .bootstrap5 img.resource, .bootstrap4 img.resource,
        .fluent img.resource,.fluent2 img.resource,.material3 img.resource {
            content: url(" ../images/Gantt/resources.png");
        }

        .material-dark img.resource, .fabric-dark img.resource, .bootstrap-dark img.resource,
        .tailwind-dark img.resource, .bootstrap5-dark img.resource, .highcontrast img.resource,
        .fluent-dark img.resource,.fluent2-highcontrast img.resource,.fluent2-dark img.resource,
        .material3-dark img.resource {
            content: url(" ../images/Gantt/__resources.png");
        }

        .material img.taskName, .fabric img.taskName, .bootstrap img.taskName,
        .tailwind img.taskName, .bootstrap5 img.taskName, .bootstrap4 img.taskName,
        .fluent img.taskName,.fluent2 img.taskName,.material3 img.taskName {
            content: url(" ../images/Gantt/taskname.png");
        }

        .material-dark img.taskName, .fabric-dark img.taskName, .bootstrap-dark img.taskName,
        .tailwind-dark img.taskName, .bootstrap5-dark img.taskName, .highcontrast img.taskName,
        .fluent-dark img.taskName,.fluent2-highcontrast img.taskName,.fluent2-dark img.taskName,
        .material3-dark img.taskName {
            content: url(" ../images/Gantt/__taskname.png");
        }

        .material img.startDate, .fabric img.startDate, .bootstrap img.startDate,
        .tailwind img.startDate, .bootstrap5 img.startDate, .bootstrap4 img.startDate,
        .fluent img.startDate,.fluent2 img.startDate,.material3 img.startDate {
            content: url(" ../images/Gantt/startdate.png");
        }

        .material-dark img.startDate, .fabric-dark img.startDate, .bootstrap-dark img.startDate,
        .tailwind-dark img.startDate, .bootstrap5-dark img.startDate, .highcontrast img.startDate,
        .fluent-dark img.startDate,.fluent2-highcontrast img.startDate, .fluent2-dark img.startDate,
        .material3-dark img.startDate{
            content: url(" ../images/Gantt/__startdate.png");
        }

        .material img.duration, .fabric img.duration, .bootstrap img.duration,
        .tailwind img.duration, .bootstrap5 img.duration, .bootstrap4 img.duration,
        .fluent img.duration,.fluent2 img.duration,.material3 img.duration {
            content: url(" ../images/Gantt/duration.png");
        }

        .material-dark img.duration, .fabric-dark img.duration, .bootstrap-dark img.duration,
        .tailwind-dark img.duration, .bootstrap5-dark img.duration, .highcontrast img.duration,
        .fluent-dark img.duration ,.fluent2-highcontrast img.duration,.fluent2-dark img.duration,
        .material3-dark img.duration{
            content: url(" ../images/Gantt/__duration.png");
        }

        .material img.progressTemplate, .fabric img.progressTemplate, .bootstrap img.progressTemplate,
        .tailwind img.progressTemplate, .bootstrap5 img.progressTemplate, .bootstrap4 img.progressTemplate,
        .fluent img.progressTemplate,.fluent2 img.progressTemplate,.material3 img.progressTemplate {
            content: url(" ../images/Gantt/progress.png");
        }

        .material-dark img.progressTemplate, .fabric-dark img.progressTemplate, .bootstrap-dark img.progressTemplate,
        .tailwind-dark img.progressTemplate, .bootstrap5-dark img.progressTemplate, .highcontrast img.progressTemplate,
        .fluent-dark img.progressTemplate,.fluent2-highcontrast img.progressTemplate,.fluent2-dark img.progressTemplate,
        .material3-dark img.progressTemplate {
            content: url(" ../images/Gantt/__progress.png");
        }

        img.resource, img.taskName, img.startDate, img.duration, img.progressTemplate {
            margin-right: 8px;
            display: inline-block;
        }
    </style>

}

@section ActionDescription{
    <div id="action-description">
        <p>This sample demonstrates the Gantt header template feature. In this sample, custom icons are displayed in the column headers.</p>
    </div>
}
@section Description{

    <div id="description">
        <p>
            The Gantt provides a way to define a custom element in the header element. The <code>columns -> headerTemplate</code> property accepts either string or HTML element`s ID value,
            which will be used as the template for the header cell.
        </p>
        <p>In this demo, we have rendered the customized template for all column headers.</p>
        <p>More information about the header template can be found in documentation section.</p>
        <br />
    </div>
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Header Template in ASP.NET Core Gantt control. Explore here for more details."/>
                }
@section Title{
                    <title>ASP.NET Core Gantt Header Template Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Header Template in ASP.NET Core Gantt Control</h1>
                }