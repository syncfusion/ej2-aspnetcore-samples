    <script type="text/javascript">
        var rteObj, textArea, srcArea, splitObj, markdownConverter;
        function onCreate() {
            rteObj = this;
            markdownConverter = ej.markdownconverter.MarkdownConverter
            textArea = rteObj.contentModule.getEditPanel() ;
            srcArea = document.querySelector('.source-code');
            updateValue();
        }
        function onChange() {
            updateValue();
        }
        function resizing() {
            rteObj.refreshUI();
        }
        function updateValue() {
            srcArea.innerHTML = markdownConverter.toHtml(rteObj.contentModule.getEditPanel().value);
        }
        function onCreateSplitter() {
            splitObj = this;
            rteObj.refreshUI();
            if (ej.base.Browser.isDevice) {
                splitObj.orientation = 'Vertical';
                document.body.querySelector('.heading').style.width = 'auto';
            }
        }
    </script>
