@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section" align="center">
        
        <ejs-chart id="lineContainer" load="load" title="Fruit Production Statistics">
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.DateTime" minimum="new DateTime(1971, 01, 1)" maximum="new DateTime(2012, 01, 1)" edgelabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift">
                <e-majorgridlines width="0"></e-majorgridlines>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis interval="10" labelFormat="{value}%" title="Production (In Percentage)">
                <e-majorticklines width="0"></e-majorticklines>
                <e-linestyle width="0"></e-linestyle>
            </e-chart-primaryyaxis>
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-series-collection>
                <e-series dataSource="ViewBag.StepLineData" xName="Period" width="5" opacity="1" yName="AUS_UnemploymentRate" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StepLine">
                    <e-series-marker visible="true" height="7" width="7"></e-series-marker>
                </e-series>
            </e-series-collection>
            <e-chart-tooltipsettings enable="true" shared="true" header="<b>Fruit Production</b>" format="${point.x} : <b>${point.y}</b>"></e-chart-tooltipsettings>
        </ejs-chart>
    </div>
    
    <script>
        function load(args) {
            var selectedTheme = location.hash.split("/")[1];
            selectedTheme = selectedTheme ? selectedTheme : "Material";
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast'));
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
