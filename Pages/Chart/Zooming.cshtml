    <script>
        var data = dataValue;
        var seriesData = [];
        var point;
        var i;
        for (i = 0; i < data.length; i++) {
            point = { x: new Date(1941, i + 2, i), y: data[i] / 1000 - 0.5 };
            seriesData.push(point);
        }

        function load(args) {
            var indexedTheme = location.hash.split('/')[1];
            indexedTheme = indexedTheme ? indexedTheme : 'Fluent2';
            args.chart.theme = (indexedTheme.charAt(0).toUpperCase() + indexedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5'));
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "80%";
            args.chart.series[0].dataSource = seriesData;
        }
    </script>
