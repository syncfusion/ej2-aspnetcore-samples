@using Syncfusion.EJ2
@{ViewBag.Title = "    Essential DocIO (Word) : Edit Equation : Syncfusion";}
@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("EditEquation", "DocIO", FormMethod.Post);
            {
                <div style="margin-top: 10px;font-size:14px">
                    Click the button to view the generated Word document. Please note that Microsoft Word Viewer or Microsoft Word is required to view the resultant Word document.
                    <div style="margin-top: 8px">
                        <input id="generate" name="Button" class="e-btn" type="submit" value="Generate Document" style="width:170px; text-transform:capitalize" />
                    </div>
                </div>
                Html.EndForm();
            }
        }
    </div>
}
@section ActionDescription{
    <div>
        This sample demonstrates how to modify a mathematical equation in a Word document using Essential DocIO.
    </div>
}
@section Description{
    <div>
        DocIO allows you to modify a mathematical equation in the Word document.
        <ul>
            <li>
                You can modify the text in the equation field.
            </li>
            <li>
                You can change the format of  an equation. 
            </li>
        </ul>
    </div>
    <div style="margin-top: 15px">
         More information about mathematical equations can be found in this
        <a href="https://help.syncfusion.com/file-formats/docio/working-with-mathematical-equation">documentation</a>
        section.
    </div>
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Edit Equation in ASP.NET Core DocIO control. Explore here for more details."/>
                }
@section Title{
                    <title>ASP.NET Core DocIO Edit Equation Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Edit Equation in ASP.NET Core DocIO Control</h1>
                }