@page
@using EJ2CoreSampleBrowser.Models
@using Syncfusion.EJ2
@{
    var formatData = new DateFormats().GetDateFormatsWithId();
    var inputformatsData = new DateFormats().GetInputFormats();
    var fortmatValue = "dd-MMM-yy";
}

@section ControlsSection {
    <div class=" col-lg-8 control-section sb-property-border">
        <div id="wrapper" class="datepicker-section">
            <div id="datepicker-control">
                <label class="example-label">Select Date</label>
                <ejs-datepicker id="datepicker" format="dd-MMM-yy" inputFormats="@(new string[] {"dd/MM/yyyy", "yyyyMMdd"})" value=DateTime.Now></ejs-datepicker>
            </div>
        </div>
    </div>
    <div class="col-lg-4 property-panel">
        <div class="property-panel-section">
            <div class="property-panel-header">Properties</div>
            <div class="property-panel-content">
                <label class="example-label">Choose a display format</label>
                <ejs-dropdownlist id="displayFormatDatePicker" value="@fortmatValue" placeholder="Select a format" change="onFormatChange" dataSource="@formatData">
                </ejs-dropdownlist>
            </div>
            <div class="property-panel-content">
                <label class="multi-label">Choose input formats</label>
                <ejs-multiselect id="inputFormatsDatePicker" value="@(new List<string> { "dd/MM/yyyy", "yyyyMMdd" })" placeholder="e.g. MM/dd/yyyy" mode="CheckBox" showSelectAll="true" change="onInputFormatChange" dataSource="@inputformatsData">
                </ejs-multiselect>
            </div>
        </div>
    </div>
}

<script>
    function onFormatChange(args) {
        var datepickerOBJ = document.getElementById('datepicker').ej2_instances[0];
        datepickerOBJ.format = args.itemData.Text;
    }

    function onInputFormatChange(args) {
        var datepickerOBJ = document.getElementById('datepicker').ej2_instances[0];
        datepickerOBJ.inputFormats = args.value;
    }
</script>

@*custom code start*@
<style>
    #wrapper {
        max-width: 246px;
        margin: 30px auto;
        padding-top: 20px;
    }

    .property-section {
        width: 250px;
    }

    .multi-label {
        margin-top: 45px;
    }
</style>
@*custom code end*@

@section ActionDescription {
    <div id="action-description">
        <p>
            In this sample, the DatePicker has been configured with the <code>dd-MMM-yy</code> date format.
            To change this current date format, go to the properties panel at the right side and select a date format from the available options.
            For mobile mode touch the icon at the right side and select a date format from the available options.
        </p>
        <p>
            Furthermore, this example showcases the flexible date value parsing functionality available in DatePicker component. 
            By utilizing the <code>InputFormats</code> property, users can enter dates in various formats, which will be automatically parsed and formatted according to the chosen date format.
        </p>
    </div>

}

