@page
@using EJ2CoreSampleBrowser.Models
@using Syncfusion.EJ2
@model EJ2CoreSampleBrowser.Pages.TreeGrid.FoodItem

@{
    var Cancel = new
    {
        content = "Cancel",
        cssClass = "e-danger",
        isPrimary = true
    };
    var Print = new
    {
        content = "Print",
        isPrimary = true
    };
    var defaultanimation = new Syncfusion.EJ2.Popups.DialogAnimationSettings { Effect = Syncfusion.EJ2.Popups.DialogEffect.Zoom };
}

@section ControlsSection {
    <div class="control-section">
        <div class="content-wrapper">
            <div class="treegrid-center-container">
                <div class="resmenu-toolbar-search">
                    <input id="search-autocomplete" type="text" placeholder="Search for DISHES" />
                    <span class="e-input-group-icon e-search-icon"></span>
                </div>
                <ejs-treegrid id="MenuTreeGrid"
                              dataSource="@FoodItem.GetData()"
                              idMapping="FoodId"
                              parentIdMapping="CategoryId"
                              allowKeyboard="false"
                              treeColumnIndex="0"
                              height="400"
                              rowTemplate="#rowTemplate"
                              created="createdTreeGrid"
                              dataBound="onDataBound"
                              rowDataBound="rowDataBound">
                    <e-treegrid-columns>
                        <e-treegrid-column field="FoodName" headerText="Explore Our Menu" width="150" textAlign="Left"></e-treegrid-column>
                    </e-treegrid-columns>
                </ejs-treegrid>
                <ejs-dialog id="cartDialog"
                            header="Bill Summary"
                            content=""
                            width="400px"
                            showCloseIcon="true"
                            isModal="true"
                            visible="false"
                            created="createdDialog"
                            target="#MenuTreeGrid"
                            beforeOpen="beforeOpen">
                    <e-dialog-buttons>
                        <e-dialog-dialogbutton buttonModel="Cancel" click="clearCart"></e-dialog-dialogbutton>
                        <e-dialog-dialogbutton buttonModel="Print" click="printCartDialogContent"></e-dialog-dialogbutton>
                    </e-dialog-buttons>
                </ejs-dialog>
                <div id="template">
                    <div>
                        <div class="e-btn-group e-custom-button"><button id="CartUpdate" class="e-btn">VIEW CART<span id="cartbadge" class="e-cart-badge e-badge e-badge-primary e-badge-notification e-badge-overlap">0</span></button></div>
                    </div>
                </div>
