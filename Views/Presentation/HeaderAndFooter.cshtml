@using Syncfusion.EJ2
@{ViewBag.Title = "    Essential Presentation (Presentation) : HeaderAndFooter : Syncfusion";}
@{Html.BeginForm("HeaderAndFooter", "Presentation", FormMethod.Post); }

@section ActionDescription{
    This sample demonstrates how to insert the header and footer in a PowerPoint presentation.
}

@section Description{
    <b>Features:</b>
    <br />
    <br />
    <ul>
			<li>Add date and time, slide number and footer into a PowerPoint slide.</li>
			<li>Add header into a notes slide.</li>
			<li>Edit an existing header or footer.</li>
    </ul>
    <br />
}
@section ControlsSection{
    <div class="control-section">
        <div class="rowdiv" style="font-size:14px">
            <p  style="font-weight:normal">
                Click the button to view a PowerPoint presentation generated by Essential Presentation. Please note
                that Microsoft PowerPoint viewer or its equivalent is required to view the resultant document.
            </p>
        </div>
        <div class="rowdiv" style="margin-top: 16px">
            <div class="celldiv">
                @Html.EJS().Button("createbtn").Content("Create Presentation").Render()
            </div>
        </div>
        <br />
    </div>
}
@section Title{
                    <title>ASP.NET Core Presentation Header And Footer Example - Syncfusion Demos </title> 
                }
@section Meta{
                    <meta name="description" content="This example demonstrates the Header And Footer in ASP.NET Core Presentation control. Explore here for more details."/>
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Header And Footer in ASP.NET Core Presentation Control</h1>
                }