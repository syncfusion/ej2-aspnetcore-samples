                ];
            } else if (args.sparkline.element.id === "winloss") {
                args.sparkline.dataSource = [12, 15, -10, 13, 15, 6, -12, 17, 13, 0, 8, -10];
            } else if (args.sparkline.element.id === "pie1") {
                args.sparkline.dataSource = [{ x: 'Gold', y: 46 }, { x: 'Silver', y: 37 }, { x: 'Bronze', y: 38 }];
            } else if (args.sparkline.element.id === "pie2") {
                args.sparkline.dataSource = [{ x: 'Gold', y: 27 }, { x: 'Silver', y: 23 }, { x: 'Bronze', y: 17 }];
            } else if (args.sparkline.element.id === "pie3") {
