    <meta name="description" content="This example demonstrates the Format in ASP.NET Core DatePicker control. Explore here for more details." />
}
@section Title {
    <title>ASP.NET Core DatePicker Format Example - Syncfusion Demos </title>
}
@section Header {
    <h1 class='sb-sample-text'>Example of Format in ASP.NET Core DatePicker Control</h1>
