@using Syncfusion.EJ2

@section ControlsSection{
    <div class="control-section">
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            Click the button to view the sample
        </div>
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            <a class="e-btn" id="newTab">Open in new tab</a>
        </div>
    </div>
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('newTab').setAttribute("href", location.href.split("Sidebar")[0] + "Sidebar/Default");
        document.getElementById('newTab').setAttribute("target", "_blank");
    });


</script>

<style>
    .center {
        text-align: center;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
</style>

@section Meta{
    <meta name="A simple and responsive sidebar for ASP.NET Core that lets you navigate between various parts of an application with ease" />
}


@section ActionDescription{
    <div id="action-description">
        <p>
            Click the button to view the Sidebar sample in new tab.
        </p>
    </div>

}

@section Description{
    <div id="description">
        <p>
            This sample demonstrates the basic <code>Sidebar</code> component. Click the toggle
            button to expand or collapse the sidebar.
        </p>
    </div>

}





