@using Syncfusion.EJ2
@section ControlsSection{
    <div class="col-lg-10 control-section">
        <ejs-chart id="container" title="GDP by Countries" load="load">
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-legendsettings visible="true">
            </e-chart-legendsettings>
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category"
                                  interval="1"
                                  isIndexed="true">
                <e-majorticklines width="0"></e-majorticklines>
                <e-crosshairtooltip enable="true"></e-crosshairtooltip>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis labelFormat="{value}%">
                <e-majorticklines width="0"></e-majorticklines>
            </e-chart-primaryyaxis>
            <e-series-collection>
                <e-series dataSource="ViewBag.GDP_2015" name="2015" xName="Country" width="2" opacity="1" yName="GDPGrowthRate" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column">
                    <e-series-marker visible="false" height="10" width="10">
                        <e-series-datalabel visible="true" position="@Syncfusion.EJ2.Charts.LabelPosition.Top" name="TextMapping">
                        </e-series-datalabel>
                    </e-series-marker>
                </e-series>
                <e-series dataSource="ViewBag.GDP_2016" name="2016" xName="Country" width="2" opacity="1" yName="GDPGrowthRate" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column">
                    <e-series-marker visible="false" height="10" width="10">
                        <e-series-datalabel visible="true" position="@Syncfusion.EJ2.Charts.LabelPosition.Top" name="TextMapping">
                        </e-series-datalabel>
                    </e-series-marker>
                </e-series>
            </e-series-collection>
        </ejs-chart>
    </div>
    <div class="col-lg-2 property-section">
        <table id="property" title="Properties" style="width: 100%">
            <tbody>
                <tr style="height: 50px">
                    <td style="width: 50%">
                        <div>
                            Indexed:
                        </div>
                    </td>
                    <td style="width: 50%;">
                        <div>
                            <input type="checkbox" id="isIndexed" checked="">
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <style>
        #isIndexed:hover {
             cursor: pointer !important;
        }
        path[id^=container_Series_0_Point_] {
             cursor: pointer !important;
        }
    </style>
    <script>
    @*custom code start*@
        function load(args) {
            var indexedTheme = location.hash.split('/')[1];
            indexedTheme = indexedTheme ? indexedTheme : 'Material';
            args.chart.theme = (indexedTheme.charAt(0).toUpperCase() + indexedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast'));
            args.chart.primaryXAxis.labelIntersectAction = ej.base.Browser.isDevice?'None':'Rotate45';
            args.chart.series[0].marker.dataLabel.enableRotation = ej.base.Browser.isDevice?'true':'false';
            args.chart.series[1].marker.dataLabel.enableRotation = ej.base.Browser.isDevice?'true':'false';
            args.chart.series[0].marker.dataLabel.angle = ej.base.Browser.isDevice?-90:0;
            args.chart.series[1].marker.dataLabel.angle = ej.base.Browser.isDevice?-90:0;
        }
    @*custom code end*@    
        document.getElementById('isIndexed').onchange = () => {
            var element = (document.getElementById('isIndexed'));
            var chart = document.getElementById('container').ej2_instances[0]
            chart.primaryXAxis.isIndexed = element.checked;
            if (chart.primaryXAxis.isIndexed) {
                chart.series[0].type = 'Column';
                chart.series[1].type = 'Column';
                chart.series[0].marker.visible = false;
                chart.series[1].marker.visible = false;
                chart.primaryXAxis.labelRotation = 0;
            } else {
                chart.series[0].type = 'Line';
                chart.series[1].type = 'Line';
                chart.series[0].marker.visible = true;
                chart.series[1].marker.visible = true;
                chart.primaryXAxis.labelRotation = 90;
            }
            chart.refresh();
        };
    </script>

}
@*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Indexed Category Axis in ASP.NET Core Chart control. Explore here for more details."/>
                }
@*custom code end*@
@section ActionDescription{

    <div id="action-description">
        <p>
            This sample shows an indexed category axis in a chart with details about GDP growth across different countries.
        </p>
    </div>
}
@section Description {
    <div id="description">
        <p>
            The category axis is also rendered on the basis of the index values in the data source. To render the indexed category axis, set <a target="_blank" href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.Charts.ChartAxis.html#Syncfusion_EJ2_Charts_ChartAxis_ValueType">ValueType</a> to <b>Category</b> and <a target="_blank" href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.Charts.ChartAxis.html#Syncfusion_EJ2_Charts_ChartAxis_IsIndexed">IsIndexed</a> property to <b>true</b>.
        </p>
        <p>
            More information about the indexed category axis can be found in this
            <a target="_blank" href="https://ej2.syncfusion.com/aspnetcore/documentation/chart/category-axis#indexed-category-axis">documentation section</a>.
        </p>
    </div>

}
@section Title{
                    <title>ASP.NET Core Chart Indexed Category Axis Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Indexed Category Axis in ASP.NET Core Chart Control</h1>
                }